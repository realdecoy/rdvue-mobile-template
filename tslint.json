{
    "extends": "tslint:recommended",
    "rulesDirectory": [],
    "rules": {
        "max-line-length": {
            "options": [150]
        },
        "no-arg": true,
        "no-bitwise": true,
        "no-consecutive-blank-lines": false,
        "no-console": {
            "severity": "warning",
            "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
        },
        "array-type": [false]
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
                                                                                                                       