{
  "version": 2,
  "name": "page",
  "description": "Generate a basic page.",
  "isNativescriptTemplate": true,
  "arguments": [{
      "name": "pageNameKebab",
      "type": "string",
      "description": "the name for the generated page. (e.g. hello-world)"
    },
    {
      "name": "pageName",
      "type": "string",
      "description": "the name for the generated page.",
      "isPrivate": true
    }
  ],
  "sourceDirectory": "./",
  "installDirectory": "pages",
  "files": [{
      "source": "index.ts",
      "target": "index.ts",
      "content": [{
        "matchRegex": "__PAGE__KEBAB__",
        "replace": "${pageNameKebab}"
      }]
    },
    {
      "source": "page.scss",
      "target": "${pageNameKebab}.scss",
      "content": [{
        "matchRegex": "__PAGE__",
        "replace": "${pageNameKebab}"
      }]
    },
    {
      "source": "page.ts",
      "target": "${pageNameKebab}.ts",
      "content": [{
        "matchRegex": "__PAGE__KEBAB__",
        "replace": "${pageNameKebab}"
      }, {
        "matchRegex": "__PAGE__",
        "replace": "${pageName}"
      }]
    },
    {
      "source": "page.vue",
      "target": "${pageNameKebab}.vue",
      "content": [{
        "matchRegex": "__PAGE__",
        "replace": "${pageNameKebab}"
      }]
    }
  ],
  "routes": [
    "{ name: '__NAME__', path: '/__PATH__' },"
  ]
}
